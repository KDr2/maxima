"
def block_random(m_vars):
    m_vars.ins({})
    assign(\"d\", block_random(HierarchialDict({}, m_vars)), m_vars)
    return(m_vars[\"d\"])
def block_random(m_vars):
    m_vars.ins({})
    assign(\"c\", block_random(HierarchialDict({}, m_vars)), m_vars)
    assign(\"c\", (6 + m_vars[\"c\"]), m_vars)
    return(m_vars[\"c\"])
def block_random(m_vars):
    m_vars.ins({})
    assign(\"e\", 20, m_vars)
    assign(\"f\", (10 + m_vars[\"e\"]), m_vars)
    return(m_vars[\"f\"])
block_random(HierarchialDict({}, m_vars))"$


